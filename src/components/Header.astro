---
// src/components/Header.astro
---

<header class="bg-white border-b border-slate-200/80">
  <div class="mx-auto flex max-w-5xl items-center justify-between gap-4 px-4 py-3">
    <!-- Brand -->
    <a href="/" class="flex items-center gap-3">
      <span class="inline-flex h-9 w-9 items-center justify-center rounded-xl bg-brand text-white text-lg font-semibold shadow-sm">
        AH
      </span>
      <span class="flex flex-col">
        <span class="text-lg font-semibold tracking-tight text-slate-900">
          Alex Hunter
        </span>
      </span>
    </a>

    <!-- Desktop nav -->
    <nav class="hidden items-center gap-6 text-sm text-slate-600 md:flex">
      <a href="/" class="hover:text-slate-900 transition-colors">Home</a>
      <a href="/about" class="hover:text-slate-900 transition-colors">About</a>
      <a href="/projects" class="hover:text-slate-900 transition-colors">Projects</a>
      <a href="/notes" class="hover:text-slate-900 transition-colors">Notes</a>
      <a
        href="/contact"
        class="rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-xs font-medium text-slate-800 hover:border-brand hover:text-brand transition-colors"
      >
        Contact
      </a>
    </nav>

    <!-- Mobile menu -->
    <details class="relative md:hidden">
      <summary class="flex cursor-pointer list-none items-center rounded-lg border border-slate-200 bg-white px-3 py-1.5 text-xs font-medium text-slate-700 hover:border-slate-300">
        Menu
        <span class="ml-1 inline-block h-3 w-3 rotate-0 border-b border-r border-current transition-transform details-open:rotate-90"></span>
      </summary>
      <div
        class="absolute right-0 mt-2 w-40 rounded-lg border border-slate-200 bg-white py-2 text-sm text-slate-700 shadow-lg"
      >
        <a href="/" class="block px-3 py-1.5 hover:bg-slate-50">Home</a>
        <a href="/about" class="block px-3 py-1.5 hover:bg-slate-50">About</a>
        <a href="/projects" class="block px-3 py-1.5 hover:bg-slate-50">Projects</a>
        <a href="/notes" class="block px-3 py-1.5 hover:bg-slate-50">Notes</a>
        <a href="/contact" class="block px-3 py-1.5 hover:bg-slate-50">Contact</a>
      </div>
    </details>
  </div>
</header>